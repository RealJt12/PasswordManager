<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="0dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingStart="0dp" >

    <ImageView
        android:id="@+id/iv_actionbar_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/search"
        android:src="@drawable/ic_sb_search" />

    <ImageView
        android:id="@+id/iv_actionbar_search_clear"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/search"
        android:src="@drawable/ic_input_clear" />

    <EditText
        android:id="@+id/et_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/iv_actionbar_search_icon"
        android:layout_toLeftOf="@id/iv_actionbar_search_clear"
        android:layout_toRightOf="@id/iv_actionbar_search_icon"
        android:layout_toStartOf="@id/iv_actionbar_search_clear"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLength="12"
        android:singleLine="true"
        android:textSize="18sp" />

</RelativeLayout>