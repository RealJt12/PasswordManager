<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <TextView
        android:id="@+id/tv_statistics_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_statistics_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@id/tv_statistics_names"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#C8C8C8" />

    <TextView
        android:id="@+id/tv_statistics_name_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_statistics_names"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:text="@string/all"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_statistics_count_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_statistics_count"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/tv_statistics_count"
        android:layout_below="@id/tv_statistics_names"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_statistics_clear_all_data"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/tv_statistics_name_all"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn_red"
        android:text="@string/clear_all_data"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>