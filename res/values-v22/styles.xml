<resources>

    <style name="AppTheme" parent="@style/BaseTheme" />

    <style name="ActionOverflowButtonStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_sb_more</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:scaleX">1.06</item>
        <item name="android:scaleY">1.06</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@drawable/bg_actionbar_white</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionButton">
        <item name="android:textColor">@color/blue_actionbar</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/blue_actionbar</item>
    </style>

</resources>